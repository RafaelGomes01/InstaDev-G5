<link rel="stylesheet" href="~/css/style_login.css">

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = "_LayoutNoHeader";
}

<body>
    <main class="content-login">
        <div class="body-login">
            <div class="logo-login">
                <img src="img/Instadev.png" alt="Logo">
            </div>
            <div class="form-login">
                <form class="form" method="POST" action='@Url.Action("Logar")'>
                    <input type="text" name="UserName" placeholder="UserName">
                    <input type="password" name="Senha" placeholder="Senha">
                    <button type="submit">Entrar</button>
                </form>
            </div>
            <div class="or-login">
                <div></div><p>ou</p><div></div>
            </div>
            <div class="forgot-password-login">
                <a href="#"><p>Esqueceu a senha?</p></a>
            </div>
            <div class="erro">@TempData.Peek("Mensagem")</div>
            <div class="erro">@TempData.Peek("MensagemErro2")</div>
        </div>
        <div class="subscribe">
            <p>Não tem uma conta?</p><a asp-area="" asp-controller="Cadastro" >Cadastre-se</a>
        </div>
        <div class="link-subscribe">
            <p>Obtenha o aplicativo.</p>
        </div>
        <div class="store-subscribe">
            <img src="img/google_play 1.png" alt=" Botao Google Play">
            <img src="img/app_store 1.png" alt=" Botao Apple Store">
        </div>
    </main>
    <div class="footer-subscribe">
        <ul>
            <li><a href="#">Sobre</a></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Carreiras</a></li>
            <li><a href="#">Ajuda</a></li>
            <li><a href="#">API</a></li>
            <li><a href="#">Privacidade</a></li>
            <li><a href="#">Termos</a></li>
            <li><a href="#">Contas mais relevantes</a></li>
            <li><a href="#">Hashtags</a></li>
            <li><a href="#">Localizações</a></li>
        </ul>
    </div>
    <div class="footer-subscribe last">
        <ul>
            <li><a href="#">Português (Brasil)</a></li>
            <li><a href="#">© 2021 InstaDev do Grupo 5</a></li>
        </ul>
    </div>
</body>